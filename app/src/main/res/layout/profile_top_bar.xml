<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <View
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/White"/>

    <android.support.v7.widget.CardView
        android:id="@+id/profile_top_card"
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="116dp"
        android:elevation="10dp"
        />


    <ImageButton
        android:visibility="gone"
        android:backgroundTint="@color/Black"
        android:layout_width="22dp"
        android:layout_height="22dp"
        android:layout_alignBottom="@+id/profile_image"
        android:layout_alignEnd="@+id/profile_image"
        android:background="@drawable/ic_person_add"
        android:translationZ="1dp" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profile_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:src="@drawable/ic_blank_profile"
        android:transitionName="profile_image"
        android:translationZ="@dimen/cardview_default_elevation"
        />


    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="175dp"
        >
        <TextView
            android:textColor="@color/Black"
            android:transitionName="profile_name"
            android:id="@+id/profile_name"
            android:padding="5dp"
            android:textSize="18sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/averia_serif_libre_bold"
            android:text="User Name" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:visibility="gone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="205dp"
        >
        <TextView
            android:id="@+id/profile_bio"
            android:padding="5dp"
            android:textSize="8sp"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:fontFamily="@font/averia_serif_libre_bold"
            android:text="Life is too short to do anything but lets do something at least :)" />
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:id="@+id/card_a"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="85dp"
        android:layout_marginTop="230dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:fontFamily="@font/nunito"
                android:text="Followers"
                android:textStyle="bold"
                android:textAlignment="center" />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/profile_followers_cnt"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:fontFamily="@font/nunito"
                android:text="1200"
                android:textAlignment="center"
                android:textStyle="bold" />
        </LinearLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        app:cardElevation="10dp"
        android:id="@+id/card_b"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/card_a"
        android:layout_marginEnd="85dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:fontFamily="@font/nunito"
                android:text="Followings"
                android:textAlignment="center"
                android:textStyle="bold" />

            <TextView
                android:layout_marginBottom="5dp"
                android:layout_marginTop="5dp"
                android:id="@+id/profile_followings_cnt"
                android:fontFamily="@font/nunito"
                android:textStyle="bold"
                android:layout_width="80dp"
                android:layout_height="20dp"
                android:text="1200"
                android:textAlignment="center" />
        </LinearLayout>


    </android.support.v7.widget.CardView>


    <Button
        android:layout_marginTop="300dp"
        android:id="@+id/profile_follow_button"
        android:layout_width="120dp"
        android:layout_height="35dp"
        android:layout_centerHorizontal="true"
        android:background="@color/colorPrimary"
        android:fontFamily="@font/averia_serif_libre_bold"
        android:textColor="@color/White"
        android:text="follow"
        android:textAllCaps="false"
        android:transitionName="edit_photo" />






</RelativeLayout>