<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:theme="@style/Theme.AppCompat.Light.NoActionBar"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.CreatePhotoPostActivity">


    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_marginRight="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <View
                    android:background="@drawable/solid_green_background"
                    android:layout_width="7dp"
                    android:layout_height="match_parent"
                    />
                <TextView
                    android:visibility="gone"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/textview_information"
                    android:fontFamily="@font/nunito"
                    android:padding="7dp"
                    android:text="@string/dont_use_abusive_or_attacking_language"
                    android:textColor="@color/Black"
                    tools:fontFamily="@font/nunito" />
            </LinearLayout>


            <EditText
                android:id="@+id/photo_post_caption"
                android:padding="20dp"
                android:hint="@string/write_a_caption"
                android:textSize="14sp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:minHeight="70dp"
                android:layout_weight="1"
                android:background="@drawable/transparent_background_for_caption"
               />


            <ImageView
                android:layout_gravity="center"
                android:id="@+id/create_photo_post_image"
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:minHeight="300dp"
                android:layout_height="wrap_content"
                android:scaleType="fitXY"
                android:src="@drawable/fulki_logo"/>



            <Button
                android:visibility="gone"
                android:layout_marginBottom="5dp"
                android:textAllCaps="false"
                android:padding="3dp"
                android:layout_marginTop="15dp"
                android:id="@+id/photo_post_change_pic"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/textview_information"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:text="@string/change"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:fontFamily="@font/averia_serif_libre_bold"
                />



        </LinearLayout>



    </android.support.v4.widget.NestedScrollView>

    <android.support.v7.widget.CardView
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:elevation="20dp">

        <Button
            android:id="@+id/photo_post_upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/colorPrimaryy"
            android:fontFamily="@font/averia_serif_libre_bold"
            android:text="@string/upload"
            android:textAllCaps="false"
            android:textColor="@color/White"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:fontFamily="@font/averia_serif_libre_bold" />
    </android.support.v7.widget.CardView>





</RelativeLayout>